---
import FlechaAtras from "./icons/FlechaAtras.astro";
import CampanaNotificaciones from "./icons/CampanaNotificaciones.astro"
import Lupa from "./icons/Lupa.astro"

---

<nav class="w-full px-4 py-4 flex justify-between items-center bg-slate-900">

    <button class="text-zinc-200/50 p-2 border border-zinc-900/50 rounded shadow shadow-zinc-500/50 hover:bg-slate-200 hover:text-slate-900 transition-all duration-200">
        <FlechaAtras />
    </button>

    <div class="w-4/5 sm:w-1/2 lg:w-1/3 xl:w-1/4 flex justify-end gap-4 sm:gap-0 sm:justify-between items-center">
        
        <div class="max-w-sm min-w-[150px] hidden sm:block">
            <div class="relative flex items-center">
             <Lupa />
           
              <input
              class="w-full bg-transparent placeholder:text-slate-400 text-slate-700 text-sm border border-slate-500/50 rounded-md pl-10 pr-3 py-2 transition duration-300 ease focus:outline-none focus:border-slate-400 focus:text-zinc-200 hover:border-slate-300 shadow-sm focus:shadow"
              placeholder="Buscar..." 
              />
            </div>
          </div>

        <figure class="text-zinc-200 hover:p-2 hover:bg-slate-200 hover:text-slate-900 hover:rounded transition-all duration-200 ease-in-out">
            <CampanaNotificaciones />
        </figure>
        <img src="https://img.freepik.com/fotos-premium/lobo-gafas-sol_780593-3727.jpg" alt="Imagen de usuario" class="w-12 h-12  sm:w-16 sm:h-16  rounded-full">
    </div>

</nav>


